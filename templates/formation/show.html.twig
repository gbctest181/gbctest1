{% extends 'base.html.twig' %}

{% block title %}Formation{% endblock %}

{% block body %}
    <h1>Formation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ formation.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ formation.prenom }}</td>
            </tr>
            <tr>
                <th>Heure_debut</th>
                <td>{{ formation.heureDebut ? formation.heureDebut|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Heure_fin</th>
                <td>{{ formation.heureFin ? formation.heureFin|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Fonction</th>
                <td>{{ formation.fonction }}</td>
            </tr>
            <tr>
                <th>Signature</th>
                <td>{{ formation.signature }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('formation_index') }}">back to list</a>

    <a href="{{ path('formation_edit', {'id': formation.id}) }}">edit</a>

    {{ include('formation/_delete_form.html.twig') }}
{% endblock %}
